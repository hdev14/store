{
  "compilerOptions": {
    "target": "es2016",
    "lib": [
      "esnext"
    ],
    "module": "commonjs",
    "baseUrl": ".",
    "paths": {
      "@catalog/*": [
        "src/store/catalog/*"
      ],
      "@fiscal/*": [
        "src/store/fiscal/*"
      ],
      "@payments/*": [
        "src/store/payments/*"
      ],
      "@users/*": [
        "src/store/users/*"
      ],
      "@sales/*": [
        "src/store/sales/*"
      ],
      "@shared/*": [
        "src/store/shared/*"
      ],
      "@mocks/*": [
        "__mocks__/*"
      ],
      "@tests/*": [
        "__tests__/*"
      ],
      "@api/*": [
        "src/api/*"
      ],
      "@db/*": [
        "db/*"
      ]
    },
    "sourceMap": true,
    "outDir": "./build",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  }
}
