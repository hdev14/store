{
  "compilerOptions": {
    "target": "es2016",
    "lib": [
      "esnext"
    ],
    "module": "commonjs",
    "baseUrl": ".",
    "paths": {
      "@catalog/*": [
        "src/store/catalog/*"
      ],
      "@fiscal/*": [
        "src/store/fiscal/*"
      ],
      "@payment/*": [
        "src/store/payment/*"
      ],
      "@registration/*": [
        "src/store/registration/*"
      ],
      "@sales/*": [
        "src/store/sales/*"
      ],
      "@shared/*": [
        "src/store/shared/*"
      ],
      "@mocks/*": [
        "__mocks__/*"
      ],
      "@tests/*": [
        "__tests__/*"
      ],
      "@api/*": [
        "src/api/*"
      ]
    },
    "sourceMap": true,
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "exclude": [
    "__tests__",
    "__mocks__"
  ]
}
