// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Product {
  id String @id
  name String
  description String
  active Boolean
  amount Float
  image String
  stockQuantity Int
  category Category @relation(fields: [categoryId], references: [id])
  categoryId String
  height Float
  width Float
  depth Float
  createdAt DateTime
}

model Category {
  id String @id
  name String
  code Int
  products Product[]
}
