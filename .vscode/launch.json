  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "name": "Debug",
      "request": "launch",
      "sourceMaps": true,
      "trace": true,
      "runtimeArgs": [
        "-r",
        "${workspaceFolder}/node_modules/ts-node/register",
        "-r",
        "${workspaceFolder}/node_modules/tsconfig-paths/register"
      ],
      "args": [
        "${workspaceFolder}/dist/src/api/index.js"
      ],
      "env": {
        "NODE_ENV": "development",
      },
      "outFiles": [
        "${workspaceFolder}/dist/**/*.js",
        "!**/node_modules/**"
      ],
      "skipFiles": [
        "<node_internals>/**"
      ],
    },
  ]
}
